    },
    {
      "code": 6004,
      "name": "InvalidSysvar",
      "msg": "InvalidSysvar"
    },
    {
      "code": 6005,
      "name": "OwnerOnly",
      "msg": "OwnerOnly"
    },
    {
      "code": 6006,
